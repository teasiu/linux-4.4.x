	select DW_APB_TIMER_OF
	help
	  This enables support for Marvell Berlin SoC Family

config ARCH_EXYNOS
	bool
	help
	  This enables support for Samsung Exynos SoC family

config ARCH_EXYNOS7
	bool "ARMv8 based Samsung Exynos7"
	select ARCH_EXYNOS
	select COMMON_CLK_SAMSUNG
	select HAVE_S3C2410_WATCHDOG if WATCHDOG
	select HAVE_S3C_RTC if RTC_CLASS
	select PINCTRL
	select PINCTRL_EXYNOS

	help
	  This enables support for Samsung Exynos7 SoC family

config ARCH_LAYERSCAPE
	bool "ARMv8 based Freescale Layerscape SoC family"
	help
	  This enables support for the Freescale Layerscape SoC family.

config ARCH_HISI
	bool "Hisilicon SoC Family"
	select ARM_GIC
	select CLKSRC_OF
	select PINCTRL
	select PM_OPP
	help
	  This enables support for Hisilicon ARMv8 SoC family

config SYNO_MAX_SATA_ID
    int "Max SATA ID for Synology platform"
    default 4
    help
      Set the maximum SATA ID for Synology kernel features

config SYNO_USB_NUM_CASTRATED_XHC
    int "Number of Castrated XHC USB ports"
    default 2
    help
      Set the number of USB XHC ports

config SYNO_USB_VBUS_NUM_GPIO
    int "Number of USB VBUS GPIOs"
    default 1
    help
      Set the number of VBUS GPIOs for Synology USB

config SYNO_PWRPIN_ENCODE_LEN
    int "SATA Power Pin Encode Length"
    default 8
    help
      Set the power pin encode length for Synology bootargs

config SYNO_PORT_SIGN
    string "Synology Port Sign"
    default "S"
    help
      Set the port sign prefix for Synology bootargs

config SYNO_SOFTLOCKUP_COUNTER_MAX
    int "Maximum Synology Softlockup Counter"
    default 10
    help
      Maximum value for Synology softlockup counter in watchdog

config SYNO_MAX_READAHEAD_SIZE
    int "Maximum readahead size for Synology"
    default 512

config SYNO_IO_ERROR_LIMIT_MSG_SHIFT
    int "Shift for grouping I/O error messages"
    default 6
    range 0 16
    help
      This value controls how buffer I/O error messages are grouped.
      6 means errors are grouped per 64 blocks.

config SYNO_MAX_INTERNAL_DISK
    int "Maximum number of internal disks"
    default 24
    range 1 255
    help
      Maximum number of internal disks supported by DSM.

config SYNO_SATA_RETRY_TIMES
    int "Synology SATA retry times"
    default 5
    range 1 20
    help
      Number of times to retry SATA detection before giving up.

config SYNO_ISCSI_DEVICE_PREFIX
    string "iSCSI device prefix"
    default "iscsi"

config SYNO_SATA_DEVICE_PREFIX
    string "SATA device prefix"
    default "sata"

config SYNO_USB_POWER_OFF_TIME
    int "USB power off time (ms)"
    default 100

config SYNO_HUB_POWER_CYCLE_EXTRA_DELAY_TIME
    int "Hub power cycle extra delay (ms)"
    default 50

config SYNO_USB_POWER_ON_TIME
    int "USB power on time (ms)"
    default 100

